{
  "name": "hexo-theme-dawn",
  "version": "2.0.0",
  "description": "Elegant and powerful theme for Hexo.",
  "main": "package.json",
  "scripts": {
    "eslint": "eslint scripts/ source/asset/js test/",
    "stylint": "stylint source/css/",
    "test": "mocha test/index.js",
    "css-build": "node-sass --omit-source-map-url source/asset/sass/bulma-styles.scss source/asset/css/bulma-styles.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  },
  "repository": "Ruffianjiang/hexo-theme-dawn",
  "keywords": [
    "hexo",
    "theme",
    "dawn"
  ],
  "author": "Ruffianjiang <jiangyj0516@outlook.com> (https://github.com/Ruffianjiang)",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Ruffianjiang/hexo-theme-dawn/issues"
  },
  "homepage": "https://github.com/Ruffianjiang/hexo-theme-dawn",
  "dependencies": {
    "axios": ">=0.21.1",
    "braces": ">=2.3.1",
    "chai": "4.2.0",
    "gulp": "^4.0.2",
    "hexo": "5.2.0",
    "hexo-bilibili-bangumi": "^1.5.1",
    "hexo-deployer-git": "^2.1.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-sitemap": "^2.1.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^3.0.0",
    "hexo-renderer-stylus": "^2.0.0",
    "hexo-server": "^2.0.0",
    "hexo-theme-landscape": "^0.0.3",
    "hexo-wordcount": "^6.0.1",
    "husky": "4.3.0",
    "js-yaml": "3.14.0",
    "lodash": "^4.17.20",
    "mocha": "8.2.1",
    "set-value": ">=2.0.1",
    "stylint": "2.0.0",
    "swig": "^1.4.2",
    "swig-templates": "^2.0.3",
    "update": "^0.7.4",
    "yargs-parser": ">=5.0.0-security.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm test"
    }
  },
  "devDependencies": {
    "bulma": "^0.9.1",
    "node-sass": "^5.0.0"
  }
