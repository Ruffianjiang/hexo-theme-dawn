<% if (site.posts.length < 2){ %>
    <% site.posts.each(function(post){ %>
        <%- partial('article', {post: post, index: true}) %>
    <% }) %>
<% } else { %>
    <div class="content article-list">
        <% site.posts.each(function(post, i){ %>
            <%- partial('archive-post', {post: post, even: i % 2 == 0}) %>
        <% }) %>
    </div>
<% } %>