<% if(theme.postCount.enable){  %>
	<% if(theme.postCount.wordcount){  %>
		<span class="post-count">&nbsp;&nbsp;字数统计: <%= wordcount(post.content) %>(字)</span>
	<% } %>
	<% if(theme.postCount.min2read){  %>
		<span class="post-count">&nbsp;&nbsp;阅读时长: <%= min2read(post.content) %>(分)</span>
	<% } %>
<% } %>