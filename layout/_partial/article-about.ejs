<article class="article archives-about article-type-normal" itemscope="">
  <header class="article-header">
    <h1 itemprop="title"><%= __('page.'+page.title.toLowerCase()) %></h1>
    <% if(theme.profile.author_description) { %>
    <p class="text-muted"><%= theme.profile.author_description %></p>
    <% } %>
  </header>
  <div class="article-body">
    <%- page.content %>
  </div>
</article>
<% if (theme.gitment.enable && !is_home()) { %>
  <%- partial('post/comment', {post: page}) %>
<% } %>