<% if (theme.github.username && theme.github.popular_repos.length) { %>
    <div class="widget">
        <h3 class="widget-title">Popular Repositories</h3>
        <div class="widget-body">
            <ul class="popular-container popular-repo-list list-square lh-2x"></ul>
        </div>
    </div>
    
    <script type="text/template" id="popular-list-template">
        <li class="public source ">
            <a href="{%=clone_url%}" target="_blank" title="{%=full_name%}" class="mini-repo-list-item css-truncate">
                <span class="repo-icon octicon octicon-repo"></span>
                <span class="repo-and-owner css-truncate-target">
                    {%=full_name%}
                </span>
            </a>
        </li>
    </script>
<%}%>